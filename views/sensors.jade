extends layout

block content

  script(src='/javascripts/light.js')
  h1= name
  p Welcome to #{name}
  ul
     each val, index in sensors
        li=  index + ':' + val.name + '('+val.switch+')'
           img(src='/images/light_off.png', id='img_light'+index)
           button(id= 'btn_button'+index)  Click
           
           script(type="text/javascript").
              document.getElementById("btn_button"+#{index})
                 .addEventListener("click",function(){
                   toggleImage(#{index});
                   }, false);
